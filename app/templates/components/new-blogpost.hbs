{{#if addNewBlogpost}}
  <h1>New Blog Post</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date"}}
        </div>

        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="artist">Artist</label>
          {{input value=artist id="artist"}}
        </div>

        <div class="form-group">
          <label for="catagory">Catagory</label>
          {{input value=catagory id="catagory"}}
        </div>

        <div class="form-group">
          <label for="article">Article</label>
          {{input value=article id="article"}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image"}}
        </div>

        <button {{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'blogpostFormShow'}}>New Blogpost</button>
{{/if}}
